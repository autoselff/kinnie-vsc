{
  "name": "kinnie-vsc",
  "displayName": "kinnie-vsc",
  "description": "Kinnie language support with compiler integration",
  "publisher": "autoselff",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:kinnie"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile"
  },
  "contributes": {
    "languages": [
      {
        "id": "kinnie",
        "aliases": [
          "Kinnie",
          "kinnie"
        ],
        "extensions": [
          ".kn"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "kinnie",
        "scopeName": "source.kinnie",
        "path": "./syntaxes/kinnie.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "kinnie.compile",
        "title": "Compile Kinnie File",
        "category": "Kinnie",
        "icon": "$(play)"
      },
      {
        "command": "kinnie.run",
        "title": "Compile and Run Kinnie File",
        "category": "Kinnie",
        "icon": "$(run)"
      }
    ],
    "keybindings": [
      {
        "command": "kinnie.compile",
        "key": "ctrl+shift+b",
        "when": "editorLangId == kinnie"
      },
      {
        "command": "kinnie.run",
        "key": "ctrl+shift+r",
        "when": "editorLangId == kinnie"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorLangId == kinnie",
          "command": "kinnie.compile",
          "group": "navigation@1"
        },
        {
          "when": "editorLangId == kinnie",
          "command": "kinnie.run",
          "group": "navigation@2"
        }
      ],
      "editor/title/run": [
        {
          "when": "editorLangId == kinnie",
          "command": "kinnie.run",
          "group": "navigation@1"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/node": "^20.x",
    "typescript": "^5.3.3"
  }
}